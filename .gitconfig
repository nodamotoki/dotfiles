[alias]
	logline = log --oneline --decorate --all --date-order
[user]
	name = nodamotoki
	email = nodamotoki@gmail.com
[core]
	pager = less -x4

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
